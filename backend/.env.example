# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=deployify

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Object Storage (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=deployify-artifacts

# Docker Configuration
DOCKER_HOST=tcp://localhost:2376
DOCKER_CERT_PATH=/certs/client
DOCKER_TLS_VERIFY=1

# Authentication
JWT_SECRET=your-jwt-secret-key-here
API_KEY=dev-api-key-12345

# Provider API Keys (for deployment connectors)
NETLIFY_ACCESS_TOKEN=your-netlify-token
VERCEL_ACCESS_TOKEN=your-vercel-token
DIGITALOCEAN_ACCESS_TOKEN=your-do-token
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Build Configuration
MAX_BUILD_TIME=1200  # 20 minutes
MAX_MEMORY=4096      # 4GB
BUILD_TIMEOUT=20     # minutes
CLEANUP_INTERVAL=3600 # 1 hour

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=60000  # 1 minute
RATE_LIMIT_REQUESTS=10